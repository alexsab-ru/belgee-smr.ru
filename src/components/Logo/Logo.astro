---
import settings from '@/data/settings.json';
const { site_name } = settings;
const path = Astro.url.pathname;
---
{path === '/' ? (
<div class="flex flex-nowrap items-center xs:gap-2 gap-3 xs:divide-x-0 divide-x divide-black/20 cursor-pointer" x-data="scrollTop" x-on:click="onClick">
    <img src="https://cdn.alexsab.ru/logo/belgee/belgee_logo_vertical.svg" class="h-5 sm:h-6 xl:h-10" alt={site_name} loading="lazy" />
    <span class="xs:pl-0 pl-3 text-xs sm:text-base xl:text-2xl uppercase font-medium !leading-none select-none">{site_name}</span>
</div>
) : (
<a href="/" class="flex flex-nowrap items-center xs:gap-2 gap-3 xs:divide-x-0 divide-x divide-black/20">
    <img src="https://cdn.alexsab.ru/logo/belgee/belgee_logo_vertical.svg" class="h-5 sm:h-6 xl:h-10" alt={site_name} loading="lazy" />
    <span class="xs:pl-0 pl-3 text-xs sm:text-base xl:text-2xl uppercase font-medium !leading-none select-none">{site_name}</span>
</a>
)}
